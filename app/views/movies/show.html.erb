<div class="header">
    <h1><%= link_to "Alain Chabat", movies_path, class:"nav-item" %></h1>
    <p><%= link_to "à propos", about_path, class:"nav-item" %></p>
</div>

<div class= "movie-body">
   
	<div class="movie-pic"  style="background-image: url('<%= cl_image_path @movie.photo.key, crop: :fill %>')" >
	</div>

	<h2 class="movie-title"><%= @movie.title %></h2>

    <p class="Provisoire">Sypnosis</p>
	<div class="info-movie">

		<div class= "info-réalaut">
			<p><em>Réalisateur</em> - <%= @movie.realisateur %></p>

			<p><em>Auteur</em> - <%= @movie.auteur %></p>
		</div>

		<div class="info-genre">
			<p><em>Genre</em> - <%= @movie.genre %></p>
		</div>

	</div>	

  <p><span> <%= @movie.date %> </span></p>
     
</div> 